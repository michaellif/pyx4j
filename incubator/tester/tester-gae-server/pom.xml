<?xml version="1.0" encoding="ISO-8859-1"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0">
    <!-- @version $Revision$ ($Author$) $Date$ -->
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.pyx4j</groupId>
        <artifactId>pyx</artifactId>
        <version>2.0.0-SNAPSHOT</version><!--pyx-version-->
        <relativePath>../../../pom.xml</relativePath>
    </parent>

    <artifactId>tester-gae-server</artifactId>
    <name>tester-gae-server</name>
    <description>tester-gae-server implementations</description>

    <dependencies>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-jdk14</artifactId>
        </dependency>
        
        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-entity-gae</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-unit-server</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-rpc-gwt</artifactId>
            <version>${project.version}</version>
            <classifier>tests</classifier>
        </dependency>
                
        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-commons</artifactId>
            <version>${project.version}</version>
            <classifier>tests</classifier>
        </dependency>
        
        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-entity-tests</artifactId>
            <version>${project.version}</version>
            <classifier>tests</classifier>
        </dependency>
        
        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-rpc-server</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>tester-client</artifactId>
            <version>${project.version}</version>
            <!-- scope>provided</scope-->
        </dependency>
        
        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>tester-domain</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-gwt-server</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>compile</scope>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        	<stripVersion>true</stripVersion>
                        	<excludeScope>provided</excludeScope>
                            <outputDirectory>war/WEB-INF/lib</outputDirectory>
                            <excludeArtifactIds>gwt-user,gwt-incubator,pyx-gwt-unit,pyx-gwt-widgets,pyx-gwt-ria,pyx-slf4j-api-gwt,pyx-log-gwt,pyx-entity-gwt</excludeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>
    
</project>