    <profiles>

        <profile>
            <id>build-gwt-report</id>
            <properties>
                <gwt.compiler.force>true</gwt.compiler.force>
                <gwtCompileReport>true</gwtCompileReport>
            </properties>
        </profile>

        <profile>
            <id>hasBuildLabel</id>
            <activation>
                <property>
                    <name>bamboo.buildNumber</name>
                </property>
            </activation>
            <properties>
                <buildLabel>${bamboo.buildNumber}</buildLabel>
                <build.number>${bamboo.buildNumber}</build.number>
            </properties>
        </profile>

        <profile>
            <id>build-ci</id>
            <properties>
                <gwt.compiler.force>true</gwt.compiler.force>
                <gwtDraftCompile>true</gwtDraftCompile>
                <appGWTModuleSufix>Developer</appGWTModuleSufix>
                <gwtEnableAssertions>true</gwtEnableAssertions>
            </properties>
        </profile>

        <profile>
            <id>gwt-ea</id>
            <properties>
                <gwtEnableAssertions>true</gwtEnableAssertions>
            </properties>
        </profile>

        <!-- Used for speed up the GWT compiler for developers -->
        <profile>
            <id>draft</id>
            <properties>
                <gwtDraftCompile>true</gwtDraftCompile>
                <appGWTModuleSufix>Developer</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>developer-env</id>
            <properties>
                <gwtDraftCompile>true</gwtDraftCompile>
                <appGWTModuleSufix>Developer</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>full</id>
            <properties>
                <gwt.compiler.force>true</gwt.compiler.force>
                <gwtEnableAssertions>true</gwtEnableAssertions>
                <gwtDraftCompile>false</gwtDraftCompile>
                <appGWTModuleSufix></appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>soyc</id>
            <properties>
                <gwtCompileReport>true</gwtCompileReport>
                <appGWTModuleSufix>DeveloperWebKit</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>pyx</id>
            <activation>
                <property>
                    <name>pyx</name>
                </property>
            </activation>
            <modules>
                <module>../pyx4j</module>
            </modules>
        </profile>

        <profile>
            <id>i18n-ru</id>
            <properties>
                <i18n.translate>ru</i18n.translate>
            </properties>
        </profile>

        <profile>
            <id>selenium</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>

