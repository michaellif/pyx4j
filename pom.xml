<?xml version="1.0" encoding="ISO-8859-1"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0">
    <!-- @version $Revision$ ($Author$) $Date$ -->
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.pyx4j</groupId>
        <artifactId>pyx-projects-parent</artifactId>
        <version>2.0.2-SNAPSHOT</version><!--pyx-version-->
        <relativePath>../pyx4j/essentials/pyx-projects-parent/pom.xml</relativePath>
    </parent>

    <groupId>com.propertyvista</groupId>
    <artifactId>vista</artifactId>
    <version>1.0.0-SNAPSHOT</version><!--vista-version-->

    <packaging>pom</packaging>
    <name>vista</name>
    <description>Property Vista</description>

    <organization>
        <name>>Property Vista</name>
        <url>http://www.propertyvista.com/</url>
    </organization>
    <inceptionYear>2010</inceptionYear>

    <url>http://propertyvista.jira.com/</url>

    <distributionManagement>
        <site>
            <id>vista-secure-site</id>
            <url>file:///${basedir}/target/tmp</url>
        </site>
        <!-- not public, no-deployment -->
        <repository>
            <id>pyx4j.com-no-deployment</id>
            <url>file:///${basedir}/target/tmp</url>
        </repository>
        <snapshotRepository>
            <id>pyx4j.com-no-deployment</id>
            <url>file:///${basedir}/target/tmp</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <url>https://propertyvista.jira.com/svn/VISTA/trunk</url>
        <connection>scm:svn:https://propertyvista.jira.com/svn/VISTA/trunk</connection>
        <developerConnection>scm:svn:https://propertyvista.jira.com/svn/VISTA/trunk</developerConnection>
    </scm>

    <developers>
        <developer>
            <name>Vlad Skarzhevskyy</name>
            <id>vlads</id>
            <email>skarzhevskyy@gmail.com</email>
            <organization>Pyx Software Services Inc.</organization>
            <organizationUrl>http://www.pyx4j.com</organizationUrl>
            <roles>
                <role>Project admin and developer</role>
            </roles>
            <timezone>-5</timezone>
        </developer>
        <developer>
            <name>Michael Lifshits</name>
            <id>michaellif</id>
            <email>michael.lifschitz@gmail.com</email>
            <organization>Pyx Software Services Inc.</organization>
            <organizationUrl>http://www.pyx4j.com</organizationUrl>
            <roles>
                <role>Developer, Architect</role>
            </roles>
            <timezone>-5</timezone>
        </developer>
        <developer>
            <name>Pinchuk Vadym</name>
            <id>vadymp</id>
            <email>vadymp@gmail.com</email>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>-5</timezone>
        </developer>
    </developers>


    <repositories>

        <repository>
            <id>pyx4j-snapshot</id>
            <url>http://repository.pyx4j.com/maven2-snapshot</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>

    </repositories>

    <modules>
        <module>vista-portal/vista-portal-domain</module>
        <module>vista-portal/vista-portal-rpc</module>
        <module>vista-portal/vista-portal-client</module>
        <module>vista-portal/vista-portal-domain-srv</module>
        <module>vista-portal/vista-portal-server</module>
    </modules>

    <properties>
        <!-- See profile deploy-prod -->
        <appDeploymentId>dev</appDeploymentId>
        <appGWTModuleSufix></appGWTModuleSufix>
        <appWebXmlTemplate>Open</appWebXmlTemplate>
        <gaeDeployServerId>appengine.google.com-pyx</gaeDeployServerId>
    </properties>

    <profiles>

        <profile>
            <id>cruisecontrol-env</id>
            <properties>
                <gwtCompileReport>false</gwtCompileReport>
            </properties>
        </profile>

        <profile>
            <id>hasBuildLabel</id>
            <activation>
                <property>
                    <name>label</name>
                </property>
            </activation>
            <properties>
                <buildLabel>${label}</buildLabel>
            </properties>
        </profile>

        <!-- Used for speed up the GWT compiler for developers -->
        <profile>
            <id>draft</id>
            <properties>
                <gwtDraftCompile>true</gwtDraftCompile>
            </properties>
        </profile>

        <profile>
            <id>soyc</id>
            <properties>
                <gwtCompileReport>true</gwtCompileReport>
                <appGWTModuleSufix>DeveloperWebKit</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>soyce</id>
            <properties>
                <gwtCompileReport>true</gwtCompileReport>
                <appGWTModuleSufix>DeveloperIE6</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>pyx</id>
            <activation>
                <property>
                    <name>pyx</name>
                </property>
            </activation>
            <modules>
                <module>../pyx4j</module>
            </modules>
        </profile>

        <profile>
            <id>target-prod</id>
            <properties>
                <appDeploymentId>prod</appDeploymentId>
                <appGWTModuleSufix>Prod</appGWTModuleSufix>
                <appWebXmlTemplate1>PRODUCTION</appWebXmlTemplate1>
                <gaeDeployServerId>appengine.google.com-pyx-prod</gaeDeployServerId>
            </properties>
        </profile>

        <profile>
            <id>target-www22</id>
            <properties>
                <appDeploymentId>www22</appDeploymentId>
                <appWebXmlTemplate>Protected</appWebXmlTemplate>
                <gaeDeployServerId>appengine.google.com-pyx</gaeDeployServerId>
            </properties>
        </profile>

        <profile>
            <id>target-www33</id>
            <properties>
                <appDeploymentId>www33</appDeploymentId>
                <appWebXmlTemplate>Protected</appWebXmlTemplate>
                <gaeDeployServerId>appengine.google.com-pyx</gaeDeployServerId>
            </properties>
        </profile>

    </profiles>

</project>