    <profiles>

        <profile>
            <id>build-env</id>
            <properties>
                <gwt.compiler.force>true</gwt.compiler.force>
                <gwtCompileReport>true</gwtCompileReport>
            </properties>
        </profile>

        <profile>
            <id>hasBuildLabel</id>
            <activation>
                <property>
                    <name>bamboo.buildNumber</name>
                </property>
            </activation>
            <properties>
                <buildLabel>${bamboo.buildNumber}</buildLabel>
            </properties>
        </profile>

        <profile>
            <id>hasCCBuildLabel</id>
            <activation>
                <property>
                    <name>label</name>
                </property>
            </activation>
            <properties>
                <buildLabel>${project.version}-ci${label}</buildLabel>
            </properties>
        </profile>

        <profile>
            <id>build-ci</id>
            <properties>
                <gwt.compiler.force>true</gwt.compiler.force>
                <gwtDraftCompile>true</gwtDraftCompile>
                <appGWTModuleSufix>Developer</appGWTModuleSufix>
            </properties>
        </profile>

        <!-- Used for speed up the GWT compiler for developers -->
        <profile>
            <id>draft</id>
            <properties>
                <gwtDraftCompile>true</gwtDraftCompile>
                <appGWTModuleSufix>Developer</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>soyc</id>
            <properties>
                <gwtCompileReport>true</gwtCompileReport>
                <appGWTModuleSufix>DeveloperWebKit</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>soyce</id>
            <properties>
                <gwtCompileReport>true</gwtCompileReport>
                <appGWTModuleSufix>DeveloperIE6</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>pyx</id>
            <activation>
                <property>
                    <name>pyx</name>
                </property>
            </activation>
            <modules>
                <module>../pyx4j</module>
            </modules>
        </profile>

        <profile>
            <id>target-prod</id>
            <properties>
                <appGWTModuleSufix>Prod</appGWTModuleSufix>
            </properties>
        </profile>

        <profile>
            <id>selenium</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>maven3</id>
            <activation>
                <file>
                    <!--  This employs that the basedir expression is only recognized by Maven 3.x (see MNG-2363) -->
                    <exists>${basedir}</exists>
                </file>
            </activation>
                <build>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-site-plugin</artifactId>
                            <version>3.0-beta-3</version>
                            <configuration>
                                <reportPlugins>
                                    <plugin>
                                        <groupId>org.apache.maven.plugins</groupId>
                                        <artifactId>maven-project-info-reports-plugin</artifactId>
                                        <version>2.3.1</version>
                                        <configuration>
                                            <dependencyDetailsEnabled>false</dependencyDetailsEnabled>
                                            <dependencyLocationsEnabled>false</dependencyLocationsEnabled>
                                        </configuration>
                                        <reports>
                                            <report>index</report>
                                            <!--report>dependencies</report-->
                                            <report>modules</report>
                                            <report>license</report>
                                        </reports>
                                    </plugin>
                                    <plugin>
                                        <groupId>org.apache.maven.plugins</groupId>
                                        <artifactId>maven-javadoc-plugin</artifactId>
                                        <version>2.7</version>
                                        <configuration>
                                            <quiet>true</quiet>
                                            <nohelp>true</nohelp>
                                        </configuration>
                                    </plugin>
                                </reportPlugins>
                            </configuration>
                        </plugin>
                    </plugins>
                </build>
        </profile>

    </profiles>

</project>