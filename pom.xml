    <build>
        <defaultGoal>install</defaultGoal>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>net.kindleit</groupId>
                    <artifactId>maven-gae-plugin</artifactId>
                    <version>0.5.9</version>
                    <configuration>
                        <serverId>appengine.google.com-pyx</serverId>
                        <sdkDir>${appengine.sdk.root}</sdkDir>
                        <appDir>${basedir}/war</appDir>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>


            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <testFailureIgnore>false</testFailureIgnore>
                    <excludes>
                        <exclude>**/*GWTTest.java</exclude>
                    </excludes>
                    <includes>
                        <include>**/*Test.java</include>
                        <include>**/*Tests.java</include>
                    </includes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Version>${label}</Version>
                            <Build-Time>${cctimestamp}</Build-Time>
                            <Implementation-Version>${project.version}</Implementation-Version>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>

                    <execution>
                        <id>process-classes.eclipse-sync</id>
                        <phase>process-classes</phase>
                        <goals>
                          <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <condition property="war.classes" value="${basedir}/war/WEB-INF/classes" else="${project.build.directory}/classes">
                                    <available file="${basedir}/war/WEB-INF/web.xml"/>
                                </condition>
                                <copy todir="${war.classes}" preservelastmodified="true" overwrite="true" failonerror="false">
                                    <fileset dir="${project.build.directory}/classes"/>
                                </copy>
                            </tasks>
                        </configuration>
                    </execution>

                    <!-- hack for better GWT eclipse sync -->
                    <execution>
                        <id>prepare-package.add-sources-to-jar</id>
                        <phase>prepare-package</phase>
                        <goals>
                          <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <condition property="jar.classes" value="${project.build.outputDirectory}" else="${project.build.directory}/sources">
                                    <available file="${basedir}/jar-source-4gwt.marker"/>
                                </condition>
                                <copy todir="${jar.classes}" preservelastmodified="true" overwrite="true" failonerror="false">
                                    <fileset dir="${project.build.sourceDirectory}"/>
                                </copy>
                            </tasks>
                        </configuration>
                    </execution>

                    <execution>
                        <id>package.rm-sources-from-classes</id>
                        <phase>package</phase>
                        <goals>
                          <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <condition property="jar.classes" value="${project.build.outputDirectory}" else="${project.build.directory}/sources">
                                    <available file="${basedir}/jar-source-4gwt.marker"/>
                                </condition>
                                <delete quiet="true" includeemptydirs="true">
                                    <fileset dir="${jar.classes}">
                                         <include name="**/*.java"/>
                                    </fileset>
                                </delete>
                            </tasks>
                        </configuration>
                    </execution>

                    <execution>
                        <id>site.build-version</id>
                        <phase>site</phase>
                        <goals>
                          <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <replace dir="${project.build.directory}/site" includes="*.html,statscm/*.html">
                                    <replacefilter token="#build#" value="${buildLabel}"/>
                                    <replacefilter token="#version#" value="${project.version}"/>
                                </replace>
                            </tasks>
                        </configuration>
                    </execution>

                    <execution>
                        <id>clean.gwt-generated</id>
                        <phase>clean</phase>
                        <goals><goal>run</goal></goals>
                        <configuration>
                            <tasks>
                                <delete quiet="true" includeemptydirs="true">
                                    <fileset dir="${basedir}/logs"/>
                                    <fileset dir="${basedir}/war/test"/>
                                    <fileset dir="${basedir}/war/WEB-INF/classes"/>
                                    <fileset dir="${basedir}/war/WEB-INF/lib"/>
                                    <fileset dir="${basedir}/.gwt-cache"/>
                                </delete>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

