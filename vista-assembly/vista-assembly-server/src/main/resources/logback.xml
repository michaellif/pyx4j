<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE configuration>
<configuration debug="false">

    <property name="logs-name" value="vista" />

    <define name="container-home" class="com.pyx4j.logback.ContainerHomeProperty"/>
    <define name="application-name" class="com.pyx4j.logback.ContextNameProperty">
        <default>vista</default>
    </define>
    
    <!-- OFF in Tomcat -->
	<define name="consoleLogLevel" class="com.propertyvista.server.config.logback.ConsoleLogLevelProperty"/>
    <!-- ON in Tomcat -->
    <define name="logstashLogLevel" class="com.propertyvista.server.config.logback.LogstashLogLevelProperty"/>
    
    <conversionRule conversionWord="message" converterClass="com.pyx4j.logback.IStringViewMessageConverter" />

    <appender name="ConsoleAppender.info" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${consoleLogLevel}</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- The caller line# should clickable in eclipse console.-->
            <pattern>%-5level [%mdc{namespace}] %-70message\t{ %class.%method\(%file:%line\)}%n%throwable</pattern>
        </encoder>
    </appender>

<!--
set the log file name depending on property.
start new log file on each application start
-->

    <appender name="FileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${container-home}/logs/${application-name}/${logs-name}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--  Rollover at the top of each hour.  -->
            <fileNamePattern>${container-home}/logs/${application-name}/${logs-name}.%d{yyyy-MM-dd_HH}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.PyxExtensionSizeAndTimeBasedFNATP">
                <rolloverOnStart>true</rolloverOnStart>
                <maxFileSize>10000KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- see fileNamePattern; hours (100 days) -->
            <maxHistory>2400</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
             <pattern>%-5level %date %6relative\t {%class.%method\(%file:%line\)} [%X{namespace}.%X{sessionNum}.%X{userID}]\t [%thread]\n\t%message\n%throwable</pattern>
        </encoder>
    </appender>

<!-- special file for errors only -->
    <appender name="FileAppender.warn" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <file>${container-home}/logs/${application-name}/${logs-name}-warn.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${container-home}/logs/${application-name}/${logs-name}-warn.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.PyxExtensionSizeAndTimeBasedFNATP">
                <rolloverOnStart>true</rolloverOnStart>
                <maxFileSize>3000KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>100</maxHistory>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
             <pattern>%-5level %date %6relative\t {%class.%method\(%file:%line\)} [%X{namespace}.%X{sessionNum}.%X{userID}]\t [%thread]\n\t%message\n%throwable</pattern>
        </encoder>
    </appender>

    <appender name="FileAppender.alert" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <file>${container-home}/logs/${application-name}/${logs-name}-alert.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${container-home}/logs/${application-name}/${logs-name}-alert.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.PyxExtensionSizeAndTimeBasedFNATP">
                <rolloverOnStart>true</rolloverOnStart>
                <maxFileSize>3000KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>100</maxHistory>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
             <pattern>%-5level %date %6relative\t {%class.%method\(%file:%line\)} [%X{namespace}.%X{sessionNum}.%X{userID}]\t [%thread]\n\t%message\n%throwable</pattern>
        </encoder>
    </appender>

    <appender name="FileAppender.client" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${container-home}/logs/${application-name}/${logs-name}-client.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${container-home}/logs/${application-name}/${logs-name}-client.%d{yyyy-MM-dd_HH}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.PyxExtensionSizeAndTimeBasedFNATP">
                <rolloverOnStart>true</rolloverOnStart>
                <maxFileSize>3000KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>2400</maxHistory>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
             <pattern>%-5level %date %6relative\t {%class.%method\(%file:%line\)} [%X{namespace}.%X{sessionNum}.%X{userID}]\t [%thread]\n\t%message\n%throwable</pattern>
        </encoder>
    </appender>

    <appender name="FileAppender.json" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${logstashLogLevel}</level>
        </filter>

        <file>${container-home}/logs/${application-name}/logstash/${logs-name}.json</file>
                
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${container-home}/logs/${application-name}/logstash/${logs-name}.%d{yyyy-MM-dd}.%i.json</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>3000KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- see fileNamePattern; disabled -->
            <maxHistory>0</maxHistory>
            <cleanHistoryOnStart>false</cleanHistoryOnStart>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeCallerInfo>true</includeCallerInfo>
        </encoder> 
    </appender>

    <logger name="com.propertyvista" level="DEBUG" />
    <logger name="com.pyx4j" level="DEBUG" />
    <logger name="org.apache" level="INFO" />
    <logger name="com.mchange" level="ERROR" />

    <logger name="rest" level="INFO" />

	<logger name="client" level="DEBUG" >
        <appender-ref ref="FileAppender.client" />
    </logger>

    <logger name="operations-alert" level="DEBUG" >
        <appender-ref ref="FileAppender.alert" />
    </logger>

    <root level="INFO">
        <appender-ref ref="ConsoleAppender.info" />
        <appender-ref ref="FileAppender" />
        <appender-ref ref="FileAppender.warn" />
        <appender-ref ref="FileAppender.json" />
    </root>

</configuration>