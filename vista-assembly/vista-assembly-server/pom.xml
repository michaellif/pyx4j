        <profile>
            <id>deploy</id>
            <build>
                <plugins>

                    <plugin>
                        <groupId>com.pyx4j</groupId>
                        <artifactId>password-maven-plugin</artifactId>
                        <version>${pyxVersion}</version>
                        <executions>
                            <execution>
                                <id>create-pwd</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>set-project-properties</goal>
                                </goals>
                                <configuration>
                                    <serverId>${tomcatDeployServerId}</serverId>
                                    <usernameName>vista-tomcat-username</usernameName>
                                    <passwordName>vista-tomcat-pwd</passwordName>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy.echo-config</id>
                                <phase>pre-integration-test</phase>
                                <goals><goal>run</goal></goals>
                                <configuration>
                                    <target>
                                        <echo  message="vista-tomcat-url   : ${vista-tomcat-url}"/>
                                        <echo  message="deployContext      : ${deployContext}"/>
                                        <echo  message="vista-app-ping-url : ${vista-app-ping-url}"/>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>deploy.verify-version</id>
                                <phase>integration-test</phase>
                                <goals><goal>run</goal></goals>
                                <configuration>
                                    <target>
                                        <!-- Maximum time in seconds; Also see ProxyTimeout on server config-master.conf  -->
                                        <get src="${vista-app-ping-url}/public/verify?buildLabel=${buildLabel}" dest="${project.build.directory}/verify.txt" maxtime="10"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- See http://cargo.codehaus.org/Maven2+plugin -->
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy.deployer-undeploy</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>deployer-undeploy</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>deploy.verify-deploy</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>deployer-deploy</goal>
                                </goals>
                            </execution>
                        </executions>

                        <configuration>
                            <container>
                                <containerId>tomcat7x</containerId>
                                <type>remote</type>
                            </container>
                            <configuration>
                                <type>runtime</type>
                                <properties>
                                    <cargo.remote.uri>${vista-tomcat-url}/manager/text</cargo.remote.uri>
                                    <cargo.remote.username>${vista-tomcat-username}</cargo.remote.username>
                                    <cargo.remote.password>${vista-tomcat-pwd}</cargo.remote.password>
                                </properties>
                            </configuration>
                            <deployables>
                                <deployable>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <type>war</type>
                                    <pingURL>${vista-app-ping-url}/public/status</pingURL>
                                    <!-- 5 min -->
                                    <pingTimeout>300000</pingTimeout>
                                    <properties>
                                        <context>${deployContext}</context>
                                    </properties>
                                </deployable>
                            </deployables>
                        </configuration>
                    </plugin>

                </plugins>
            </build>
        </profile>

