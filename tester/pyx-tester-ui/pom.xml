<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.pyx4j</groupId>
        <artifactId>pyx</artifactId>
        <version>2.1.3-SNAPSHOT</version><!--pyx-version-->
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>pyx-tester-ui</artifactId>
    <name>pyx-tester-ui</name>
    <description>pyx-tester-ui Implementations</description>

    <distributionManagement>
        <!-- not for deployment in repository -->
        <repository>
            <id>pyx4j.com-no-deployment</id>
            <url>file:///${basedir}/target/tmp</url>
        </repository>
        <snapshotRepository>
            <id>pyx4j.com-no-deployment</id>
            <url>file:///${basedir}/target/tmp</url>
        </snapshotRepository>
    </distributionManagement>

    <dependencies>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-tester-shared</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-site-gwt</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <properties>
        <!--  TODO -->
        <gwtModule>tester</gwtModule>
        <gwtModuleCompile>com.pyx4j.tester.Client</gwtModuleCompile>
        <gwtDestinationWarFolder>${basedir}/src/test/webapp</gwtDestinationWarFolder>

        <deployContext>tester</deployContext>
        <warSourceExcludes>**/*.symbolMap</warSourceExcludes>
    </properties>

    <build>
        <!-- TODO move to pyx-tester-server -->
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-war</id>
                        <phase>package</phase>
                        <goals>
                            <goal>war</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <primaryArtifact>false</primaryArtifact>
                    <archiveClasses>true</archiveClasses>
                    <packagingExcludes>WEB-INF/lib/*.jar</packagingExcludes>
                    <warSourceDirectory>${basedir}/src/test/webapp</warSourceDirectory>
                    <warSourceExcludes>${warSourceExcludes}</warSourceExcludes>
                    <!-- web.xml processed by maven filters -->
                    <packagingExcludes>WEB-INF/web.xml</packagingExcludes>
                    <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
                </configuration>
            </plugin>

        </plugins>

    </build>

    <profiles>

        <profile>
            <id>soyc</id>
            <properties>
                <gwtModuleCompile>${gwtModule}DeveloperWebKit</gwtModuleCompile>
            </properties>
        </profile>

        <profile>
            <id>gwtct</id>
            <build>
                <plugins>

                    <plugin>
                        <groupId>com.pyx4j</groupId>
                        <artifactId>maven-gwt-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>compile-java2script</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <module>${gwtModuleCompile}</module>
                            <logLevel>INFO</logLevel>
                            <style>${gwtCompilerOutputStyle}</style>
                            <webappDirectory>${gwtDestinationWarFolder}</webappDirectory>
                            <generated>${project.build.directory}/gwt-generated</generated>
                            <localWorkers>${gwtLocalWorkers}</localWorkers>
                            <draftCompile>${gwtDraftCompile}</draftCompile>
                            <compileReport>${gwtCompileReport}</compileReport>
                        </configuration>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <profile>
            <id>deploy-tomcat</id>
            <build>
                <plugins>

                    <plugin>
                        <groupId>com.pyx4j</groupId>
                        <artifactId>maven-password-plugin</artifactId>
                        <version>${project.version}</version>
                        <executions>
                            <execution>
                                <id>create-pwd</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>set-project-properties</goal>
                                </goals>
                                <configuration>
                                    <serverId>${pyx-tester-tomcatDeployServerId}</serverId>
                                    <usernameName>pyx-tomcat-username</usernameName>
                                    <passwordName>pyx-tomcat-pwd</passwordName>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- See http://cargo.codehaus.org/Maven2+plugin -->
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy.deployer-undeploy</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>deployer-undeploy</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>deploy.verify-deploy</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>deployer-deploy</goal>
                                </goals>
                            </execution>
                        </executions>

                        <configuration>
                            <container>
                                <containerId>tomcat7x</containerId>
                                <type>remote</type>
                            </container>
                            <configuration>
                                <type>runtime</type>
                                <properties>
                                    <cargo.remote.uri>${pyx-tester-tomcat-url}/manager/text</cargo.remote.uri>
                                    <cargo.remote.username>${pyx-tomcat-username}</cargo.remote.username>
                                    <cargo.remote.password>${pyx-tomcat-pwd}</cargo.remote.password>
                                </properties>
                            </configuration>
                            <deployer>
                                <type>remote</type>
                                <deployables>
                                    <deployable>
                                        <groupId>${project.groupId}</groupId>
                                        <artifactId>${project.artifactId}</artifactId>
                                        <type>war</type>
                                        <properties>
                                            <context>${deployContext}</context>
                                        </properties>
                                    </deployable>
                                </deployables>
                            </deployer>

                        </configuration>
                    </plugin>

                </plugins>
            </build>
        </profile>

    </profiles>

</project>