<?xml version="1.0" encoding="ISO-8859-1"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0">
<!-- @version $Revision$ ($Author$) $Date$ -->
	<modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.pyx4j</groupId>
        <artifactId>pyx</artifactId>
        <version>2.2.5-SNAPSHOT</version><!--pyx-version-->
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>pyx-site-client</artifactId>
    <name>pyx-site-client</name>
    <description>pyx-site-client Implementations</description>

	<dependencies>

		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<scope>provided</scope>
		</dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-dev</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-log-gwt</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-gwt-forms</artifactId>
            <version>${project.version}</version>
        </dependency>

		<dependency>
			<groupId>com.pyx4j</groupId>
			<artifactId>pyx-security-gwt</artifactId>
            <version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>com.pyx4j</groupId>
			<artifactId>pyx-site-shared</artifactId>
            <version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>com.pyx4j</groupId>
			<artifactId>pyx-entity-gwt</artifactId>
            <version>${project.version}</version>
		</dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-gwt-serialization</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
        	<groupId>com.pyx4j</groupId>
        	<artifactId>pyx-essentials-gwt</artifactId>
        	<version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-jdk14</artifactId>
            <optional>true</optional>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
	</dependencies>

    <properties>
        <project.jar-source-4gwt>true</project.jar-source-4gwt>
    </properties>

    <build>

        <plugins>

            <plugin>
                <groupId>com.pyx4j</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>source-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>