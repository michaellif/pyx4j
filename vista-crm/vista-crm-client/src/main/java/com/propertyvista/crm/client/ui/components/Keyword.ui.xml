<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.keyword {
			display: inline-block;
			
			padding-top: 2px;
			padding-bottom: 3px;
			padding-left: 5px;
			padding-right: 5px;
			
			margin-right: 5px;
			
			border-style: outset;			
			border-color: gray;
			border-radius: 5px;
			border-width: 1px;
			
			background-color: #8CB37D;
		}
		
		.keywordLabel {
			display: inline;
		}
		.keywordCloseButton {
			display: inline;
			cursor: pointer;
		}			
	</ui:style>
	
	<g:HTMLPanel styleName="{style.keyword}">
		<g:Label ui:field="keywordLabel" styleName="{style.keywordLabel}"/>		
		<g:Label ui:field="unselectControl" text="X" styleName="{style.keywordCloseButton}"/>
	</g:HTMLPanel>
				
</ui:UiBinder> 