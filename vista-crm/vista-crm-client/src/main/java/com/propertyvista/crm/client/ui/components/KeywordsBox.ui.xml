<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:vista="urn:import:com.propertyvista.crm.client.ui.components">
	
	<ui:style>
		.keywordsBox {
			display: inline;
		}
		.keywordsBoxActiveKeywords {
			display: inline;
		}
	</ui:style>
	
	<g:HTMLPanel styleName="{style.keywordsBox}">		
		<g:FlowPanel ui:field="activeKeywordsPanel" styleName="{style.keywordsBoxActiveKeywords}"/>		
		<vista:KeywordAdder ui:field="keywordAdder" />
	</g:HTMLPanel>
				
</ui:UiBinder> 