<?xml version="1.0" encoding="ISO-8859-1"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0">
    <!-- @version $Revision$ ($Author$) $Date$ -->
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.propertyvista</groupId>
        <artifactId>vista-crm</artifactId>
        <version>1.0.1-SNAPSHOT</version><!--vista-version-->
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>vista-crm-client</artifactId>
    <name>vista-crm-client</name>

    <dependencies>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-rpc-shared</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.propertyvista</groupId>
            <artifactId>vista-crm-rpc</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.propertyvista</groupId>
            <artifactId>vista-gwt-common</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-gwt-dashboard</artifactId>
            <version>${pyxVersion}</version>
        </dependency>

        <dependency>
            <groupId>com.pyx4j</groupId>
            <artifactId>pyx-svg-gwt</artifactId>
            <version>${pyxVersion}</version>
        </dependency>

        <dependency>
        	<groupId>com.pyx4j</groupId>
        	<artifactId>pyx-site-gwt</artifactId>
        	<version>${pyxVersion}</version>
        </dependency>

        <dependency>
            <groupId>pl.rmalinowski.gwt2swf</groupId>
            <artifactId>gwt2swf</artifactId>
        </dependency>

    </dependencies>

    <properties>
        <gwtModule>crm</gwtModule>
        <gwtModuleCompile>vista.${gwtModule}${appGWTModuleSufix}</gwtModuleCompile>
        <gwtDestinationWarFolder>${basedir}/../../vista-server/src/main/webapp</gwtDestinationWarFolder>

        <poSaveLocation>true</poSaveLocation>
        <poSufix></poSufix>
        <gettextArg></gettextArg>
    </properties>

    <profiles>
        <profile>
            <id>gwtc</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.pyx4j</groupId>
                        <artifactId>maven-gwt-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>compile-java2script</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <module>${gwtModuleCompile}</module>
                            <logLevel>INFO</logLevel>
                            <style>${gwtCompilerOutputStyle}</style>
                            <webappDirectory>${gwtDestinationWarFolder}</webappDirectory>
                            <generated>${project.build.directory}/gwt-generated</generated>
                            <extra>${project.build.directory}/gwt-extra</extra>
                            <localWorkers>${gwtLocalWorkers}</localWorkers>
                            <draftCompile>${gwtDraftCompile}</draftCompile>
                            <compileReport>${gwtCompileReport}</compileReport>
                            <!-- disableCastChecking>true</disableCastChecking -->
                            <!-- disableClassMetadata>true</disableClassMetadata -->
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>i18n-auto</id>
            <properties>
                <i18n.autoTranslate>true</i18n.autoTranslate>
                <i18n.catalog>../../vista-i18n-catalog/src/main/resources/translations</i18n.catalog>
            </properties>
        </profile>

        <profile>
            <id>i18n-nl</id>
            <properties>
                <poSaveLocation>false</poSaveLocation>
                <gettextArg>--no-location</gettextArg>
                <poSufix>-no_location</poSufix>
            </properties>
        </profile>

        <profile>
            <id>i18n</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.pyx4j</groupId>
                        <artifactId>maven-i18n-plugin</artifactId>
                        <version>${pyxVersion}</version>
                        <executions>
                            <execution>
                                <id>extract-i18n</id>
                                <goals>
                                    <goal>extract</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <poSaveLocation>${poSaveLocation}</poSaveLocation>
                            <keysFile>keys${poSufix}.pot</keysFile>
                            <excludes>
                                <exclude>com.google.*</exclude>
                            </excludes>
                            <includes>
                                <include>com.pyx4j*</include>
                                <include>com.propertyvista*</include>
                            </includes>
                            <autoTranslates>
                                <autoTranslate>ru</autoTranslate>
                                <autoTranslate>fr</autoTranslate>
                            </autoTranslates>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>i18n-old</id>
            <build>

                <plugins>

                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>

                            <!-- TMP hacks for gettext-commons problems -->
                            <execution>
                                <id>package.copy-this-source-4i18n</id>
                                <phase>package</phase>
                                <goals><goal>run</goal></goals>
                                <configuration>
                                    <target>
                                        <!-- TMP hack for  http://code.google.com/p/gettext-commons/issues/detail?id=45 -->
                                        <copy todir="${project.build.directory}/source-4i18n">
                                            <fileset dir="${project.build.sourceDirectory}">
                                                <include name="**/*.java"/>
                                            </fileset>
                                        </copy>
                                        <copy todir="${project.build.directory}/source-4i18n" failonerror="false">
                                            <fileset dir="${project.build.directory}/gwt-generated">
                                                <include name="**/*.java"/>
                                            </fileset>
                                        </copy>
                                        <!-- TMP fix for http://code.google.com/p/gettext-commons/issues/detail?id=47 -->
                                        <mkdir dir="${project.build.outputDirectory}"/>
                                    </target>
                                </configuration>
                            </execution>

                        </executions>
                    </plugin>

                    <!-- I18N -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>generate-resources.source-4i18n</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>unpack-dependencies</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/source-4i18n</outputDirectory>
                                    <excludeArtifactIds>gwt-user,gwt-incubator,pyx-unit-gwt,pyx-slf4j-api-gwt</excludeArtifactIds>
                                    <includes>**/*.java,</includes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- I18N -->
                    <plugin>
                        <groupId>org.xnap.commons</groupId>
                        <artifactId>maven-gettext-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>package.gettext</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>gettext</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <targetBundle>Messages</targetBundle>
                            <keysFile>keys-gettext${poSufix}.pot</keysFile>
                            <keywords>-ktrc:1c,2 -ktrnc:1c,2,3 -ktr -kmarktr -ktrn:1,2 -k ${gettextArg} --sort-output --add-comments</keywords>
                            <poDirectory>${basedir}/src/main/resources/translations</poDirectory>
                            <sourceDirectory>${project.build.directory}/source-4i18n</sourceDirectory>
                        </configuration>
                    </plugin>

                </plugins>

            </build>
        </profile>

    </profiles>

</project>