    <properties>
        <buildLabel>${project.version}</buildLabel>

        <gwtVersion>2.1.1</gwtVersion>
        <gaeVersion>1.4.0</gaeVersion>
        <pyx4jGwtVersion>0.5.6-SNAPSHOT</pyx4jGwtVersion>

        <jettyVersion>7.2.2.v20101205</jettyVersion>

        <!-- Used for speed up the GWT compiler for developers -->
        <gwtDraftCompile>false</gwtDraftCompile>
        <!-- OBFUSCATED, PRETTY, or DETAILED -->
        <gwtCompilerOutputStyle>OBFUSCATED</gwtCompilerOutputStyle>
        <gwtEnableAssertions>false</gwtEnableAssertions>
        <gwtCompileReport>false</gwtCompileReport>
        <gwtDisableCastChecking>false</gwtDisableCastChecking>
        <gwtDisableClassMetadata>false</gwtDisableClassMetadata>

        <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>

        <gaeDeployServerId>appengine.google.com-pyx</gaeDeployServerId>
        <appengine.sdk.root>${CORP_TOOLS}/3p-libs/gae/appengine-java-sdk-${gaeVersion}</appengine.sdk.root>

        <!--
            dependency.details takes significant time on build server for site creation
            http://maven.apache.org/plugins/maven-project-info-reports-plugin/dependencies-mojo.html
        -->
        <dependency.details.enabled>false</dependency.details.enabled>
        <dependency.locations.enabled>false</dependency.locations.enabled>
    </properties>

