                               <id>generate-rebel-xml</id>
                               <phase>process-resources</phase>
                               <goals>
                                   <goal>generate</goal>
                               </goals>
                           </execution>
                       </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

