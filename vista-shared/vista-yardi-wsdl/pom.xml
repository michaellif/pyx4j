<?xml version="1.0" encoding="ISO-8859-1"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">
    <!-- @version $Revision$ ($Author$) $Date: 2011-05-12
        14:25:23 -0400 (Thu, 12 May 2011) $ -->
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.propertyvista</groupId>
        <artifactId>vista-shared</artifactId>
        <version>1.0.5-SNAPSHOT</version><!--vista-version-->
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>vista-yardi-wsdl</artifactId>
    <name>vista-yardi-wsdl</name>

    <dependencies>

        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2-adb</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <plugin>
                <!-- Avoid extra warnings in build output -->
                <artifactId>maven-clean-plugin</artifactId>
                <executions>
                    <execution>
                        <id>removet-generated-sources</id>
                        <phase>generate-sources</phase>
                        <goals><goal>clean</goal></goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${project.build.directory}/generated-sources</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.axis2</groupId>
                <artifactId>axis2-wsdl2code-maven-plugin</artifactId>
                <configuration>
                    <generateServerSide>true</generateServerSide>
                    <generateServerSideInterface>true</generateServerSideInterface>
                    <generateAllClasses>true</generateAllClasses>
                    <unpackClasses>true</unpackClasses>
                    <syncMode>sync</syncMode>
                    <databindingName>adb</databindingName>
                    <namespaceURIs>
                        <namespaceURI>
                            <uri>http://tempuri.org/YSI.Interfaces.WebServices/ItfResidentTransactions20</uri>
                            <packageName>com.yardi.ws.operations</packageName>
                        </namespaceURI>
                    </namespaceURIs>
                </configuration>
                <executions>
                    <execution>
                        <id>wsdl2code-client-yardi</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>wsdl2code</goal>
                        </goals>
                        <configuration>
                            <wsdlFile>${basedir}/src/main/resources/ItfResidentTransactions20.wsdl</wsdlFile>
                            <packageName>com.yardi.ws</packageName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

