<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.0.0/distro-source/core/src/gwt-module.dtd">
<!-- @version $Revision$ ($Author$) $Date$ -->
<module>
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.google.gwt.widgetideas.BasicWidget' />
    <inherits name='com.pyx4j.widgets.BrowserType' />
    <inherits name='com.pyx4j.log4gwt.Log4gwt'/>
    <inherits name='com.pyx4j.gwt.GwtCommons'/>
    <inherits name='com.pyx4j.i18n.I18N'/>

    <source path="client" />


  	<replace-with class="com.google.gwt.user.client.ui.impl.RichTextAreaImplMozillaNoCSS">
		<when-type-is class="com.google.gwt.user.client.ui.impl.RichTextAreaImpl" />
    	<any>
      		<when-property-is name="user.agent" value="gecko1_8" />
      		<when-property-is name="user.agent" value="gecko" />
    	</any>
  	</replace-with>
  
    <extend-configuration-property name="rpc.blacklist" value="com.pyx4j.widgets.client.*" />
</module>
