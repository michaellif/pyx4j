<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
    version="2.5"
    xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">
    <!--
		@version $Revision$ ($Author$) $Date$
	-->
    <display-name>Vista Portal ${buildLabel} svn:${scm.revision}</display-name>

    <context-param>
        <param-name>com.pyx4j.config.server.ServerSideConfiguration</param-name>
        <param-value>com.propertyvista.server.config.VistaServerSideConfiguration</param-value>
    </context-param>

    <context-param>
        <!-- max size of the upload request -->
        <param-name>maxSize</param-name>
        <param-value>2097152</param-value>
    </context-param>

    <context-param>
        <!-- Useful in development mode to slow down the uploads in fast networks.
         Put the number of milliseconds to sleep in each block received in the server.
         false or 0, means don't use slow uploads
         -->
        <param-name>slowUploads</param-name>
        <param-value>200</param-value>
    </context-param>

    <servlet>
        <servlet-name>uploadServlet</servlet-name>
        <!-- This is the default servlet, it puts files in session -->
        <!--servlet-class>gwtupload.server.UploadServlet</servlet-class-->
        <servlet-class>com.propertyvista.server.ci.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadServlet</servlet-name>
        <url-pattern>*.gupld</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.pyx4j.entity.server.servlet.InitializationServletContextListener</listener-class>
    </listener>

    <security-constraint>
        <web-resource-collection>
        	<web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/_aj/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!--PRODUCTION_TEMPLATE_REMOVE_START-->
    <!--
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
    -->
    <!--PRODUCTION_TEMPLATE_REMOVE_END-->

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/internal/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>MCO Manager Application</realm-name>
    </login-config>

    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <filter>
        <filter-name>GWTCacheFilter</filter-name>
        <filter-class>com.pyx4j.gwt.server.GWTCacheFilter</filter-class>
        <init-param>
            <param-name>cacheExpiresHours</param-name>
            <param-value>20</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>GWTCacheFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>

    <filter>
        <filter-name>LifecycleFilter</filter-name>
        <filter-class>com.pyx4j.server.contexts.LifecycleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LifecycleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>OpenIdFilter</filter-name>
        <filter-class>com.propertyvista.server.security.openId.OpenIdFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>OpenIdFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Servlets -->
<!--
    <servlet>
        <servlet-name>CronServlet</servlet-name>
        <servlet-class>com.propertyvista.server.admin.VistaCronServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CronServlet</servlet-name>
        <url-pattern>/internal/cron/*</url-pattern>
    </servlet-mapping>
-->

    <servlet>
        <servlet-name>OpenIdServlet</servlet-name>
        <servlet-class>com.propertyvista.server.security.openId.OpenIdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpenIdServlet</servlet-name>
        <url-pattern>/o/openid</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>com.propertyvista.server.ci.VistaStatusServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/o/status</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DebugServlet</servlet-name>
        <servlet-class>com.pyx4j.essentials.server.dev.DebugServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DebugServlet</servlet-name>
        <url-pattern>/debug/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DebugServlet</servlet-name>
        <url-pattern>/o/debug/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DBResetServlet</servlet-name>
        <servlet-class>com.propertyvista.server.ci.DBResetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DBResetServlet</servlet-name>
        <url-pattern>/o/db-reset</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeferredProcessTaskWorkerServlet</servlet-name>
        <servlet-class>com.pyx4j.essentials.server.deferred.DeferredProcessTaskWorkerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeferredProcessTaskWorkerServlet</servlet-name>
        <url-pattern>/internal/worker/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoteServiceServlet</servlet-name>
        <servlet-class>com.pyx4j.rpc.server.RemoteServiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoteServiceServlet</servlet-name>
        <url-pattern>/portal/srv/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RemoteServiceServlet</servlet-name>
        <url-pattern>/tester/srv/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RemoteServiceServlet</servlet-name>
        <url-pattern>/admin/srv/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RemoteServiceServlet</servlet-name>
        <url-pattern>/crm/srv/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RemoteJ2SEServiceServlet</servlet-name>
        <servlet-class>com.pyx4j.rpc.server.RemoteJ2SEServiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoteJ2SEServiceServlet</servlet-name>
        <url-pattern>/internal/j2sesrv/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>com.pyx4j.essentials.server.download.DownloadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletContainerLoginServlet</servlet-name>
        <servlet-class>com.pyx4j.security.server.ServletContainerLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletContainerLoginServlet</servlet-name>
        <url-pattern>/_aj/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <session-config>
            <session-timeout>240</session-timeout>
    </session-config>

</web-app>
