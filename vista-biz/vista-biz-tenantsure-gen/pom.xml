<?xml version="1.0" encoding="ISO-8859-1"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">
    <!-- @version $Revision$ ($Author$) $Date: 2011-05-12
        14:25:23 -0400 (Thu, 12 May 2011) $ -->
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.propertyvista</groupId>
        <artifactId>vista-biz</artifactId>
        <version>1.1.4-SNAPSHOT</version><!--vista-version-->
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>vista-biz-tenantsure-gen</artifactId>
    <name>vista-biz-tenantsure-gen</name>

    <dependencies>

        <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-rt</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>1.12</version>
                <executions>
                    <execution>
                        <id>wsimport-CFC</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
                            <staleFile>${project.build.directory}/jaxws/stale/.wsimportStaleFlag</staleFile>
                            <wsdlDirectory>${basedir}/src/main/resources/com/cfcprograms/api/wsdl</wsdlDirectory>
                            <wsdlFiles>
                                <wsdlFile>cfc_api.asmx.wsdl</wsdlFile>
                            </wsdlFiles>
                            <wsdlLocation>https://api.cfcprograms.com/cfc_api.asmx?WSDL</wsdlLocation>
                        </configuration>
                    </execution>
               </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

</project>