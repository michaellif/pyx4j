        <dependency>
            <groupId>com.propertyvista</groupId>
            <artifactId>vista-server-common</artifactId>
            <version>${project.version}</version>
        </dependency>

	    <dependency>
            <groupId>com.propertyvista</groupId>
            <artifactId>vista-unit-preloader</artifactId>
            <version>${project.version}</version>
            <classifier>tests</classifier>
            <scope>test</scope>
            <optional>true</optional>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <forkMode>always</forkMode>
                </configuration>
