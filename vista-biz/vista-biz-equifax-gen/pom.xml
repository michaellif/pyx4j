                        </configuration>
                    </execution>
                </executions>
            </plugin>
            -->

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>xjc-ToEfx</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <staleFile>${project.build.directory}/jaxb2/.xjcStaleFlag1</staleFile>
                            <schemaFiles>CNCustTransmitToEfx.xsd</schemaFiles>
                            <packageName>ca.equifax.uat.to</packageName>
                            <outputDirectory>${project.build.directory}/generated-sources/jaxb-to</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>xjc-ToCust</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <staleFile>${project.build.directory}/jaxb2/.xjcStaleFlag2</staleFile>
                            <schemaFiles>CNEfxTransmitToCust.xsd</schemaFiles>
                            <packageName>ca.equifax.uat.from</packageName>
                            <outputDirectory>${project.build.directory}/generated-sources/jaxb-from</outputDirectory>
                        </configuration>
                    </execution>
               </executions>
               <configuration>
                   <schemaDirectory>${basedir}/src/main/resources</schemaDirectory>
                   <nv>true</nv>
                   <clearOutputDir>false</clearOutputDir>
               </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

</project>