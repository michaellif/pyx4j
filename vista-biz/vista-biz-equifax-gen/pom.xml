    <artifactId>vista-biz-equifax-gen</artifactId>
    <name>vista-biz-equifax-gen</name>

    <dependencies>

    </dependencies>

    <build>
        <plugins>

            <!-- Avoid extra warnings in build output -->
            <!--
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <executions>
                    <execution>
                        <id>remove-generated-sources</id>
                        <phase>generate-sources</phase>
                        <goals><goal>clean</goal></goals>
                        <configuration>
                            <filesets>
                                <fileset>
