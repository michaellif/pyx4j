<?xml version="1.0" encoding="ISO-8859-1"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">
	<!-- @version $Revision$ ($Author$) $Date$ -->
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.propertyvista</groupId>
		<artifactId>vista-biz</artifactId>
		<version>1.4.2-SNAPSHOT</version><!--vista-version-->
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>vista-biz-ils-gen</artifactId>
	<name>vista-biz-ils-gen</name>

	<dependencies>
		<dependency>
			<groupId>org.apache.axis2</groupId>
			<artifactId>axis2-adb</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<!-- Avoid extra warnings in build output -->
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<id>removet-generated-sources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<filesets>
								<fileset>
									<directory>${project.build.directory}/generated-sources</directory>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!--WebServices: WSDL compilation -->
			<plugin>
				<groupId>org.apache.axis2</groupId>
				<artifactId>axis2-wsdl2code-maven-plugin</artifactId>
				<configuration>
					<generateServerSide>false</generateServerSide>
					<generateServerSideInterface>false</generateServerSideInterface>
					<generateAllClasses>true</generateAllClasses>
					<unpackClasses>false</unpackClasses>
					<syncMode>sync</syncMode>
					<databindingName>adb</databindingName>
					<namespaceURIs>
						<namespaceURI>
							<uri>http://feedws.gottarent.com/</uri>
							<packageName>com.gottarent.ws</packageName>
						</namespaceURI>
					</namespaceURIs>
				</configuration>
				<executions>
					<execution>
						<id>wsdl2code-client-gottarent</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>wsdl2code</goal>
						</goals>
						<configuration>
							<wsdlOptions>
								<wsdlOption>
									<wsdlLocation>${basedir}/src/main/resources/wsdl/GottarentWS.wsdl</wsdlLocation>
									<extraargs>
										<extraarg>-xjc-Xcollection-setter-injector</extraarg>
									</extraargs>
								</wsdlOption>
							</wsdlOptions>
							<wsdlFile>${basedir}/src/main/resources/wsdl/GottarentWS.wsdl</wsdlFile>
							<packageName>com.gottarent.ws</packageName>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>kijiji.xsd2java</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources/xsd/kijiji</schemaDirectory>
							<bindingDirectory>src/main/resources/xsd/kijiji</bindingDirectory>
							<packageName>com.kijiji.pint.rs</packageName>
							<arguments>-extension -Xnamespace-prefix</arguments>
							<clearOutputDir>false</clearOutputDir>
							<staleFile>${project.build.directory}/jaxb2/.schema1XjcStaleFlag</staleFile>
						</configuration>
					</execution>
					<execution>
						<id>gottarent.xsd2java</id>
						<goals>
							<goal>xjc</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources/xsd/gottarent</schemaDirectory>
							<bindingDirectory>src/main/resources/xsd/gottarent</bindingDirectory>
							<packageName>com.gottarent.rs</packageName>
							<arguments>-extension -Xnamespace-prefix</arguments>
							<clearOutputDir>false</clearOutputDir>
							<staleFile>${project.build.directory}/jaxb2/.schema2XjcStaleFlag</staleFile>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.jvnet.jaxb2_commons</groupId>
						<artifactId>jaxb2-namespace-prefix</artifactId>
						<version>1.1</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>