<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.0.0/distro-source/core/src/gwt-module.dtd">
<!-- @version $Revision$ ($Author$) $Date$ -->
<module>
    <inherits name='com.pyx4j.entity.EntityShared'/>
    <inherits name='com.pyx4j.entity.EntityRPC'/>
    <inherits name='com.pyx4j.rpc.RPC' />
    <inherits name='com.pyx4j.log4gwt.Log4gwt'/>
    <inherits name='com.pyx4j.forms.Forms'/>
    <inherits name='com.pyx4j.gwt.GwtCommons'/>

	<define-configuration-property name="pyx.validateReservedKeywordsMemebers" is-multi-valued="false" />
	<set-configuration-property name="pyx.validateReservedKeywordsMemebers" value="true"/>

	<!--
  		Remove IEntity type names from the Generated Code. 
 	-->
 	<define-configuration-property name="pyx.ElideEntityClasses" is-multi-valued="true" />
 	
    <replace-with class="com.pyx4j.entity.client.ClientEntityFactory">
		<when-type-is class="com.pyx4j.entity.shared.IEntityFactory"/>
	</replace-with>
	    
    <generate-with class="com.pyx4j.entity.rebind.EntityFactoryGenerator">
        <when-type-assignable class="com.pyx4j.entity.shared.impl.IEntityFactoryImpl"/>
    </generate-with>
	
	<source path="client"/>
    
    <extend-configuration-property name="rpc.blacklist" value="com.pyx4j.entity.client.*" />
</module>