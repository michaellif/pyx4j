        </dependency>

        <dependency>
            <groupId>com.propertyvista</groupId>
            <artifactId>vista-oapi-interface</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.propertyvista</groupId>
            <artifactId>vista-domain-srv</artifactId>
            <version>${project.version}</version>
