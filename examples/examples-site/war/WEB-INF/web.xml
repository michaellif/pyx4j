<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>pageServlet</servlet-name>
    <servlet-class>com.pyx4j.site.server.PageServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>pageServlet</servlet-name>
    <url-pattern>/site/page</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>pageServlet</servlet-name>
    <url-pattern>/site_admin/page</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Site.html</welcome-file>
  </welcome-file-list>

</web-app>
