    <servlet>
        <servlet-name>DeferredProcessTaskWorkerServlet</servlet-name>
        <servlet-class>com.pyx4j.essentials.server.deferred.DeferredProcessTaskWorkerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeferredProcessTaskWorkerServlet</servlet-name>
        <url-pattern>/internal/worker/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoteServiceServlet</servlet-name>
        <servlet-class>com.pyx4j.rpc.server.RemoteServiceServlet
		</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoteServiceServlet</servlet-name>
        <url-pattern>/portal/srv/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoteJ2SEServiceServlet</servlet-name>
        <servlet-class>com.pyx4j.rpc.server.RemoteJ2SEServiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoteJ2SEServiceServlet</servlet-name>
        <url-pattern>/internal/j2sesrv/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
