    <context-param>
        <param-name>com.pyx4j.config.server.ServerSideConfiguration</param-name>
        <param-value>com.propertyvista.portal.server.VistaServerSideConfiguration</param-value>
    </context-param>

    <listener>
        <listener-class>com.pyx4j.entity.server.servlet.InitializationServletContextListener</listener-class>
    </listener>

    <!--PRODUCTION_TEMPLATE_REMOVE_START-->
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
    <!--PRODUCTION_TEMPLATE_REMOVE_END-->

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/internal/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

